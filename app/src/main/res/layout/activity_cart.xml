<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|top"
    android:orientation="vertical"
    tools:context=".Cart.View.CartActivity"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="11.5dp"
        android:paddingRight="16dp"
        android:paddingBottom="11.5dp">

        <ImageView
            android:id="@+id/c_ic_back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/text_my_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My cart"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_Voucher"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_below="@id/search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="7dp"
        tools:listitem="@layout/item_cart_detail" />


    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


        <TextView
            android:id="@+id/text_promo_code"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="122dp"
            android:layout_marginBottom="11dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Enter your promo code"
            android:textColor="#FF999999"
            android:textSize="19sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/container_group2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="310dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_heart_black" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_group"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_gravity="left"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Total:"
            android:textColor="#FF808080"
            android:textSize="19sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginLeft="226dp"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="$ 95.00"
            android:textColor="#FF303030"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Check out "
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
